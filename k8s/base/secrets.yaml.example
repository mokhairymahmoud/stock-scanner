apiVersion: v1
kind: Secret
metadata:
  name: stock-scanner-secrets
  namespace: stock-scanner
type: Opaque
stringData:
  # Database password
  DB_PASSWORD: "your-db-password-here"
  
  # Redis password (if using password-protected Redis)
  REDIS_PASSWORD: ""
  
  # Market Data Provider credentials
  MARKET_DATA_API_KEY: "your-api-key-here"
  MARKET_DATA_API_SECRET: "your-api-secret-here"
  
  # JWT secrets (should be strong random strings)
  WS_GATEWAY_JWT_SECRET: "your-jwt-secret-here-change-in-production"
  API_JWT_SECRET: "your-jwt-secret-here-change-in-production"

